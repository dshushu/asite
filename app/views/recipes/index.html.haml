= render 'shared/page_title', title: 'Recipes', link: { name: 'Add', dst: new_recipe_path }

- @recipes.each do |r|
  .row
    .col-lg-2
      %section.chef_info.center
        = gravatar_for r.chef, size:100
        %h5 Chef name: #{r.chef.chefname}

    .col-lg-6.well
      %h4= link_to r.name, recipe_path(r)
      %p= r.summary
      %p
        %span.quiet
          %small #{time_ago_in_words(r.created_at)} ago
          
    .col-md-4= image_tag(r.picture.url, size: '250x150', class: 'gravatar') if r.picture?
  %hr
