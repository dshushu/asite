= render 'shared/errors', obj: @recipe

.row
  .well.col-md-8.col-offset-2
    = form_for @recipe do |f|
      = f.label :name
      = f.text_field :name
      
      = f.label :summary
      = f.text_field :summary
      
      = f.label :description
      = f.text_area :description, rows:5
      
      = f.submit @recipe.new_record? ? 'Create Recipe' : 'Update Recipe', class: 'btn btn-success'
      = link_to "Cancel", @recipe.new_record? ? recipes_path : recipe_path(@recipe), class: 'btn btn-warning'